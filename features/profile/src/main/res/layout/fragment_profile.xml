<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.gwl.model.MediaType" />

        <variable
            name="viewModel"
            type="com.gwl.profile.ProfileViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_10dp">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20dp"
            loadCircularDrawable="@{@drawable/profile_placeholder}"
            android:layout_height="100dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="@dimen/_10dp"
                android:id="@+id/textNameTitle"
                android:text="Name :"
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="@dimen/_10dp"
                android:id="@+id/textName"
                tools:text="Name"
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_toRightOf="@id/textNameTitle"
                android:text="@{viewModel.user.name}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="@dimen/_10dp"
                android:id="@+id/textEmailTitle"
                android:text="Email :"
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_below="@+id/textName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="@dimen/_10dp"
                android:id="@+id/textEmail"
                tools:text="Email"
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_toRightOf="@id/textEmailTitle"
                android:layout_below="@+id/textName"
                android:text="@{viewModel.user.email}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </LinearLayout>

</layout>